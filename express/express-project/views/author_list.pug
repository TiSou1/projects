extends layout

block content

    h1= title

    ul
    each author in author_list
        li
            a(href=author.url) #{author.name}
            |(#{author.birth} - #{author.death})
            if author.lifespan!=''
                span  年龄: #{author.lifespan}
            else
                span  在世时间未知!

    else
        li There are no authors.